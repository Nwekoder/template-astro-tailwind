---
import { twMerge } from "tailwind-merge"
const { title, links, alignment } = Astro.props
---

<div class="relative group cursor-pointer flex items-center gap-2">
	<span class="p-2">{title}</span>

	<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="size-5">
		<path
			fill-rule="evenodd"
			d="M5.22 8.22a.75.75 0 0 1 1.06 0L10 11.94l3.72-3.72a.75.75 0 1 1 1.06 1.06l-4.25 4.25a.75.75 0 0 1-1.06 0L5.22 9.28a.75.75 0 0 1 0-1.06Z"
			clip-rule="evenodd"></path>
	</svg>

	<div class={twMerge("group-hover:flex absolute gap-1 hidden flex-col p-2 min-w-56 shadow-md top-full bg-neutral-200 rounded-md", alignment == "right"? "right-0" : "", alignment == "left"? "left-0" : "", alignment == "center"? "left-1/2 -translate-x-1/2" : "")}>
		{links.map((link) => <a class="px-4 py-2 rounded-lg transition-[background,color] hover:bg-neutral-900 hover:text-neutral-100" href={link.href}>{link.title}</a>)}
	</div>
</div>